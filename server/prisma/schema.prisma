// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  output        = "../node_modules/.prisma/client"
  binaryTargets = ["native", "darwin-arm64"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model StudentAuth {
  id                     String          @id @unique @default(uuid())
  email                  String          @unique
  password               String
  isVerified             Boolean         @default(false)
  emailVerificationToken String
  studentProfile         StudentProfile?
}

model StudentProfile {
  id            String        @id @unique @default(uuid())
  nickName      String
  studentAuth   StudentAuth   @relation(fields: [studentAuthId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  studentAuthId String        @unique
  profileImage  ProfileImage?
}

model ProfileImage {
  publicId         String         @default("")
  url              String         @default("")
  studentProfile   StudentProfile @relation(fields: [studentProfileId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  studentProfileId String         @unique
}
